# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/pixisphere
MONGODB_DB_NAME=pixisphere

# Note: Replace the above URI with your actual MongoDB connection string
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/pixisphere
# For local MongoDB: mongodb://localhost:27017/pixisphere

# Base URL for the Express public API
NEXT_PUBLIC_API_BASE_URL=https://pixisphere-backend-t2l9.onrender.com/api/v1/public

# IP geolocation service used on the Home page to detect the user's city
NEXT_PUBLIC_GEOLOCATION_API=https://ipapi.co/json/

# Firebase configuration (client side)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Optional duplicate of API base (used by auth pages). You can keep it same as NEXT_PUBLIC_API_BASE_URL
NEXT_PUBLIC_API_URL=https://pixisphere-backend-t2l9.onrender.com/api/v1